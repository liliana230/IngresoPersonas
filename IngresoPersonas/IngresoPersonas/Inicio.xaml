<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngresoPersonas.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Background="white"
            Margin="0,35,10,0">
                <Image Source="person.jpg"
                   HeightRequest="450"
                   WidthRequest="380"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
            </StackLayout>
            <Button  x:Name="btningreso" Text="Ingresar Información" FontSize="Subtitle" Clicked="btningreso_Clicked" 
                     TextColor="Black" BackgroundColor="Tomato" Margin="60,0,60,0"/>

            <Label Text="Liliana Hernandez y Delbert Lira" TextColor="Black" HorizontalOptions="Center"> </Label>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>